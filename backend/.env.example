# 数据库配置
MONGODB_URI=mongodb://localhost:27017/aigame
MONGODB_DB_NAME=aigame
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500

# Langchain配置
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Mastra配置（可选，替代Langchain）
# MASTRA_API_KEY=your_mastra_api_key_here

# 服务器配置
PORT=3001
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long
SESSION_SECRET=your_session_secret_here

# 前端配置
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# 游戏配置
GAME_ROUND_TIMEOUT=120000
MAX_PLAYERS_PER_GAME=1
AI_DECISION_TIMEOUT=30000
GAME_MAX_ROUNDS=200
GAME_AUTOSAVE_INTERVAL=60000
GAME_DEBUG_MODE=false

# 游戏平衡参数
GAME_INITIAL_MONEY=100000
GAME_INITIAL_REPUTATION=50
GAME_MAX_ACTION_POINTS=3

# AI行为参数
AI_AGGRESSIVENESS=0.5
AI_COOPERATIVENESS=0.6
AI_RISK_TOLERANCE=0.4
AI_ENABLE_CACHE=true

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
